<h1>Listado de sectores</h1>

<table>
	<thead>
		<tr>
		  <th>Nombre</th>
		  <th>Responsables</th>
		  <th>E-mail</th>
		  <th></th>
		</tr>
	</thead>
	<tbody>
	<% @sectores.each do |sector| %>
		<tr>
		  <td><%= sector.nombre %></td>
		  <%- if sector.responsables.size == 1 %>
		  	<td><%= sector.responsables.first.nombre_completo %></td>
		  <% elsif sector.responsables.empty? %>
		  	<td>-</td>
		  <% else %>
			  <td><%= sector.responsables.size %></td>
		  <% end -%>
		  <td><%= sector.email %></td>
		  <td>
		  	<%= link_to 'Ver', sector %>
		  	<%= link_to 'Editar', edit_sector_path(sector) %>
		  	<%= link_to 'Eliminar', sector, :confirm => 'Esta seguro?', :method => :delete %>
		  </td>
		</tr>
	<% end %>
	</tbody>
</table>

<br />

<%= link_to 'Nuevo sector', new_sector_path %>

