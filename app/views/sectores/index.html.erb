<h1>Listado de sectores</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sectores.each do |sector| %>
  <tr>
    <td><%= sector.nombre %></td>
    <td><%= link_to 'Ver', sector %></td>
    <td><%= link_to 'Editar', edit_sector_path(sector) %></td>
    <td><%= link_to 'Eliminar', sector, :confirm => 'Esta seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

