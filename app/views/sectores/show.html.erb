<h1>Sector</h1>
<dl>
	<dt>Nombre:</dt>
	<dd><%= @sector.nombre %></dd>

	<dt>Email:</dt>
	<dd><%= @sector.email %></dd>

	<dt>Responsables:</dt>
	<dd>
		<ul>
		<% @sector.responsables.each do |responsable| %>
			<li><%= responsable.nombre_completo %></li>
		<% end %>
		</ul>
	</dd>
</dl>

<%- if can? :edit, @sector %>
<%= link_to 'Editar', edit_sector_path(@sector) %> |
<%= link_to 'Volver', sectores_path %>
<% end -%>

