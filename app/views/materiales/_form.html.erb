<%= semantic_form_for([@requerimiento, @material]) do |f| %>
  <% params = filtered_input_params(@material) %>
  <%= f.inputs do %>
    <%= f.input :nombre, params %>
    <%= f.input :cantidad, params.merge({:label => 'Cantidad/Unidad'}) %>
    <%= f.input :detalle %>
  <% end %>
  <%= f.buttons do %>
    <% f.commit_button "Crear",:button_html => { :disable_with => 'Procesando...' } %>
  <% end %>
<% end %>