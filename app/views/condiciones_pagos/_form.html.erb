<%= form_for(@condicion_pago) do |f| %>
  <% if @condicion_pago.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@condicion_pago.errors.count,  "error evita", "errores evitan") %> que esta condición de pago pueda ser guardada:</h2>

      <ul>
      <% @condicion_pago.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br />
    <%= f.text_area :descripcion %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar condición de pago"%>
  </div>
<% end %>

