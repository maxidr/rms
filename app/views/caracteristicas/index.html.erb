<h1>Listado de características</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Valor</th>
    <th>Material</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @caracteristicas.each do |caracteristica| %>
  <tr>
    <td><%= caracteristica.nombre %></td>
    <td><%= caracteristica.valor %></td>
    <td><%= caracteristica.material %></td>
    <td><%= link_to 'Ver', caracteristica %></td>
    <td><%= link_to 'Editar', edit_caracteristica_path(caracteristica) %></td>
    <td><%= link_to 'Eliminar', caracteristica, :confirm => 'Esta seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva Característica', new_caracteristica_path %>

