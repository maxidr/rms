<%= show_for @proveedor do |p| %>
	<%= p.attribute :razon_social %>
	<%= p.attribute :domicilio %>
	<%= p.attribute :telefono, :label => 'Teléfono' %>
	<%= p.attribute :cuit %>
	<%= p.attribute :localidad %>
	<%= p.attribute :cod_postal, :label => 'Código postal' %>
	<%= p.attribute :representante %>
	<%= p.attribute :jefe_ventas, :label => 'Jefe de ventas' %>
	<%= p.attribute :memo %>
<% end %>

<%= link_to 'Editar', edit_proveedor_path(@proveedor) %> |
<%= link_to 'Volver', proveedores_path %>

