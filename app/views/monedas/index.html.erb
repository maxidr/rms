<div class="contextual">
  <%= link_to 'Nueva moneda', new_moneda_path %>
</div>
<h1>Tipos de moneda</h1>

<table>
	<thead>
		<tr>
		  <th>Símbolo</th>
		  <th>Nombre</th>
		  <th>¿Está habilitado?</th>
		  <th></th>
		</tr>
	</thead>
	<tbody>
	<% @monedas.each do |moneda| %>
		<tr>
		  <td><%= link_to moneda.simbolo, edit_moneda_path(moneda), :title => "Editar #{moneda.nombre}" %></td>
		  <td><%= link_to moneda.nombre, edit_moneda_path(moneda), :title => "Editar #{moneda.nombre}" %></td>
		  <td><%= moneda.enabled? ? 'Si' : 'No' %></td>
		  <td class="actions">
				<%= link_to 'Editar', edit_moneda_path(moneda) %>
				<% if moneda.enabled? %>
  		  	<%= link_to 'Deshabilitar', moneda, :confirm => 'Esta seguro?', :method => :delete %>
  		  <% else %>
  		    <%= link_to 'Habilitar', enable_moneda_path(moneda), :confirm => 'Esta seguro?', :method => :put %>
  		  <% end %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>
<%= will_paginate @monedas %>

