- if can? :add_attachment, @presupuesto
  .contextual
    = link_to 'Agregar adjunto', new_presupuesto_attachment_path(@presupuesto)

h2 Adjuntos

- if @presupuesto.attachments.empty?
  p Aun no posee adjuntos cargados
- else
  table
    thead
      tr
        th Nombre
        th
    tbody
      - @presupuesto.attachments.each do |attachment|
        tr
          td = attachment.name
          td.actions
            = link_to 'Ver', attachment_path(attachment)
            = link_to 'Editar', edit_attachment_path(attachment) if can? :edit, attachment
            = link_to 'Eliminar', attachment, :confirm => 'Esta seguro?', :method => :delete if can? :destroy, attachment


