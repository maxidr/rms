<%= semantic_form_for [@requerimiento, @presupuesto] do |f| %>
  <%= f.inputs do %>
    <%= f.input :proveedor_id, :as => :select, :collection => Proveedor.all, :label_method => :razon_social %>
    <%= f.inputs :name => 'Monto', :class => 'complex-inputs' do %>
      <%= f.input :moneda, :label_method => :simbolo, 
        :label => false, :hint => 'Moneda', :selected => Moneda.find_by_simbolo('$').id %>
      <%= f.input :monto, :label => false %>    
    <% end %>
    <%= f.input :condicion_pago, :label_method => :nombre %>
    <%= f.input :detalle, :as => :text %>
  <% end %>
  <%= f.buttons %>
<% end %>




