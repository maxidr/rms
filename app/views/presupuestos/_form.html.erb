<% semantic_form_for [@requerimiento, @presupuesto] do |f| %>
  <%= f.inputs do %>
    <%= f.input :proveedor_id, :as => :select, :collection => Proveedor.all, :label_method => :razon_social %>
    <%= f.inputs :name => 'Monto' do %>
      <%= f.input :moneda, :label_method => :simbolo, :label => false, :hint => 'Moneda' %>
      <%= f.input :monto, :label => false %>    
    <% end %>
  <% end %>
<% end %>




