<!DOCTYPE html>
<html>
<head>
  <title>Rms</title>

  <%= stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'compiled/print.css', :media => 'print' %>
  <%= stylesheet_link_tag 'smoothness/jquery-ui-1.8.9.custom.css', :media => 'screen' %>

  <!--[if IE]>
    <%= stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection' %>
  <![endif]-->

  <!--[if lt IE 7]>
    <%= stylesheet_link_tag 'compiled/ie6.css', :media => 'screen, projection' %>
  <![endif]-->

  <!--
  <%= stylesheet_link_tag "app", "formtastic", "formtastic_changes", "menu", "scaffold", "jquery.ui" %>
  <%= formtastic_stylesheet_link_tag %>
  -->
  <%= javascript_include_tag :defaults %>

  <!-- Autogrow textarea -->
  <%= javascript_include_tag 'jquery.ata.js' %>

  <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js"></script>

  <%= yield :stylesheets %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="wrapper">

    <div id="top-menu">
    <% if usuario_signed_in? %>
		  <%= render "layouts/user_nav" %>
		<% end %>
    </div>

    <div id="header">
      <h1>RMS</h1>
      <div id="main-menu">
        <% if usuario_signed_in? %>
          <ul>
            <%= tab :requerimientos %>
            <% unless current_usuario.admin? %>
              <li><%= link_to 'Nuevo requerimiento', new_requerimiento_path %></li>
            <% end %>
            <%- if current_usuario.admin? %>
              <%= tab :sectores %>
              <%= tab :rubros %>
              <%= tab :empresas %>
              <%= tab :proveedores %>
              <%= tab :monedas %>
              <%= tab :condiciones_pagos, 'Condiciones de pago' %>
              <%= tab :usuarios %>
            <% end -%>
          </ul>
         <% end %>
      </div>
    </div>

    <div id="main">
      <div id="content">
        <%= render "layouts/notification_area" %>
        <%= yield %>
      </div>
    </div>
  </div>
  <%= yield :javascript %>
</body>
</html>

