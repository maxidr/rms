<h3>Documento adjunto</h3>
<%= link_to "Volver al #{@attachment.attachable_type}, ID #{@attachment.attachable_id}", "/#{@attachment.attachable_type.downcase.pluralize}/#{@attachment.attachable_id}", :class => 'back_button'%>
<dl>
  <dt>Nombre</dt>
  <dd><%= @attachment.name %></dd>
</dl>

<dl>
  <dt>Fecha de recepcion</dt>
  <dd><%= @attachment.reception_date %></dd>
</dl>

<dl>
  <dt>Nombre del adjunto</dt>
  <dd><%= @attachment.attachment_file_name.to_s %></dd>
</dl>

<dl>
  <dt>Tama√±o</dt>
  <dd><%= @attachment.attachment_file_size %> bytes</dd>
</dl>

<dl>
  <dt>Tipo</dt>
  <dd><%= @attachment.attachment_content_type %></dd>
</dl>

<% if @attachment.attachment_content_type.include?('image') || @attachment.attachment_content_type.include?('message') %>
<dl>
  <dt>
    Preview
  </dt>
  <dd>
    <%= image_tag @attachment.attachment.url(:original) %>
  </dd>
</dl>
<% else %>
<dl>
  <dt>
    Preview
  </dt>
  <dd><!--<a href="<%= @attachment.attachment.url %>" target="_blank" >ver </a>--></dd>
  <iframe src="https://docs.google.com/viewer?url=<%= @attachment.attachment.url(:original) %>&embedded=true" width='100%' height='450'> <p>Su navegador no soporta iframes.</p></iframe>
</dl>
<% end %>
<%= link_to 'Descarga', @attachment.attachment.url(:original, false), :class => "fa fa-cloud-download fa-lg" %>
